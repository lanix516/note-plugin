{
    "manifest_version": 2,
    "name": "MD NOTE",
    "description": "write diary every day, keep doctor away.",
    "version": "1.0",
    "icons": {
        "48": "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "storage",
        "notifications",
        "http://*/*",
        "https://*/*"
    ]
}